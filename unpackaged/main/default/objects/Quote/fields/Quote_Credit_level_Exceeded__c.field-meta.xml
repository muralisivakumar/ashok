<?xml version="1.0" encoding="UTF-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Quote_Credit_level_Exceeded__c</fullName>
    <description>Check if quote exceeds the customer&#39;s credit limit</description>
    <formula>Opportunity.Account.Credit_Limit__c &lt;= ((Opportunity.Account.Total_SO_Grand_Total_Non_CC__c - Opportunity.Account.Total_SO_Paid_Amount_Non_CC__c) + (TotalPrice + ShippingHandling + Tax))</formula>
    <formulaTreatBlanksAs>BlankAsZero</formulaTreatBlanksAs>
    <label>Quote Credit level Exceeded ?</label>
    <trackHistory>false</trackHistory>
    <type>Checkbox</type>
</CustomField>
